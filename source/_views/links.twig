<section class="row">
    <h2 class="page-header">Liens</h2>

    {% for link in site.links %}
        <div class="col-xs-4 text-center">
            <a href="{{ link.url }}">
                <img class="img-thumbnail img-responsive center-block link-image"
                     src="assets/{{ link.image }}"
                     alt="{{ link.name }}">
            </a>
            <h4>{{ link.name }}</h4>
            <p><a href="{{ link.url }}">{{ link.short_url }}</a></p>
            <p>{{ link.description }}</p>
        </div>
{% endfor %}
</section>
