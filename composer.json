{
    "name": "bveing/my-resume",
    "description": "Resume of Benoit Viguier",
    "type": "project",
    "require": {
        "sculpin/sculpin": "~2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Benoit Viguier",
            "email": "benoit+github@wizacha.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
      "html": "vendor/bin/sculpin generate",
      "pdf": "composer html && mkdir -p output && composer _pdf-resume && composer _pdf-motivation",
      "clean": "rm -rf output output_dev",
      "_pdf-resume": "wkhtmltopdf output_dev/resume.html output/Viguier_CV.pdf",
      "_pdf-motivation": "wkhtmltopdf output_dev/motivation.html output/Viguier_LM.pdf"
    }
}
